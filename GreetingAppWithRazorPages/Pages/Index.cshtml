@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">
    <div class="col-md-6">
        <h1 class="display-3 text-center">Greetings</h1>
        <div class="form-container">
            <form class="form-group" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <label asp-for="person.FirstName">Name:</label>
                <input asp-for="person.FirstName" type="text" class="form-control" placeholder="Enter firstname you want to greet">

                <div class="mt-4 text-center">
                    <button class="btn btn-success">Greet</button>
                </div>
            </form>
        </div>

        <div class="mt-4">
                <h1 class="display-5 text-center border rounded">@Model.greeting</h1>
        </div>
    </div>
</div>
